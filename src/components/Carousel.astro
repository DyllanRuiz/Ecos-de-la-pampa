---
const imagenes = [
  "/images/Esquipulas.jpg",
  "/images/1.jpg",
  "/images/2.jpg",
  "/images/3.jpg",
  "/images/4.jpg",
  "/images/ultimosabanero.jpg",
];
---

<div
  id="carrusel"
  class="md:w-[427px] md:h-[640px] relative overflow-hidden rounded-2xl w-[270px] h-[400px] mx-auto"
  aria-label="Carrusel de imÃ¡genes"
  role="region"
>
  {imagenes.map((src, i) => (
    <img
      src={src}
      alt={`Imagen carrusel ${i + 1}`}
      loading="lazy"
      class="absolute top-0 left-0 w-full h-full object-cover rounded-2xl border-4 border-primary-300 transition-opacity duration-1000 ease-in-out"
      style={i === 0 ? "opacity: 0.67;" : "opacity: 0;"}
      draggable="false"
    />
  ))}
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const carrusel = document.getElementById("carrusel");
    if (!carrusel) return;

    const imgs = carrusel.querySelectorAll("img");
    let index = 0;
    const intervalTime = 5000; 

    function mostrarSiguienteImagen() {
      imgs[index].style.opacity = "0";
      index = (index + 1) % imgs.length;
      imgs[index].style.opacity = "0.67";
    }

    setInterval(mostrarSiguienteImagen, intervalTime);
  });
</script>
